body,html
	line-height:1
	font-weight:200
	font-family:'PingFang SC','STHeitiSC-Light','Helvetical-Lighr','arial','sans-serif'
.clearfix
	display:inline-block
	&:after
		display:block 
		content:''
		height:0
		width:0
		clear:both
		visibility:hidden
		

@media(-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5)
	.bordr-1px
		&::after
			-webkit-transform: scalY(0.7)
			transform: scaleY(0.7)
@media(-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2)
	.bordr-1px
		&::after
			-webkit-transform: scalY(0.5)
			transform: scaleY(0.5)